<Window x:Class="g1_hangmanhero.Views.SummaryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:g1_hangmanhero.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SummaryView" Height="500" Width="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <TextBlock Text="Hangman Game" FontSize="36" FontWeight="Bold" 
           HorizontalAlignment="Center" Margin="0,0,0,40" Foreground="Red"/>
            <!-- Title Section -->
            <TextBlock Text="Game Summary"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,0,0,20"/>
        </StackPanel>

        <!-- Information Display -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="{Binding WordUsed, StringFormat='Word Used: {0}'}" Margin="5" FontSize="16"/>
            <TextBlock Text="{Binding Score, StringFormat='Score: {0}'}" Margin="5" FontSize="16"/>
            <TextBlock Text="{Binding Mistakes, StringFormat='Mistakes: {0}'}" Margin="5" FontSize="16"/>
            <TextBlock Text="{Binding TimeTaken, StringFormat='Time Taken: {0} seconds'}" Margin="5" FontSize="16"/>
            <TextBlock Text="{Binding PlayedAt, StringFormat='Played At: {0}'}" Margin="5" FontSize="16"/>

            <!-- Export Button -->
            <Button Content="Export to CSV"
                    Command="{Binding ExportCommand}"
                    Width="150"
                    Height="35"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="14"/>

            <Button Content="Back"
                    Command="{Binding BackCommand}"
                    Width="50"
                    Height="30"
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Background="Gray"
                    Foreground="White"
                    />
        </StackPanel>
    </Grid>
</Window>
