<Window x:Class="g1_hangmanhero.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="420" Width="350" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Hangman Game" FontSize="36" FontWeight="Bold" 
           HorizontalAlignment="Center" Margin="0,0,0,40" Foreground="Red"/>

            <TextBlock Text="Register" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock Text="Username:" Margin="0,0,0,0"/>
            <TextBox  Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
            <TextBlock Text="Password:" Margin="0,0,0,0"/>

            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Tag="Password"/>
            <TextBlock Text="Confirm Password:" Margin="0,0,0,0"/>

            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10" Tag="ConfirmPassword"/>

            <Button Content="Register"
                    Command="{Binding RegisterCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}"
                    Tag="{Binding ElementName=ConfirmPasswordBox}" Margin="0,0,0,10"/>

            <TextBlock Text="{Binding StatusMessage}" Foreground="Red" TextWrapping="Wrap"/>

            <Button Content="Back to Login" Click="Login_Click" HorizontalAlignment="Right" FontSize="10"/>
        </StackPanel>
    </Grid>
</Window>
