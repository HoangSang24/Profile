<Window x:Class="g1_hangmanhero.Views.GameSetupAdminView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:g1_hangmanhero.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Admin Management" Height="650" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="8.5*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="Hangman Game - Admin" FontSize="36" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,40" Foreground="Red"/>

            <TextBlock Text="Current User: " FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding CurrentUserName}" FontWeight="Bold" VerticalAlignment="Center" Margin="100,0,0,0"/>
        </Grid>

        <TabControl Grid.Row="1" SelectedValue="{Binding SelectedTab}">
            <TabItem Header="Manage Words" Name="WordsTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid Grid.Column="0" 
                              ItemsSource="{Binding Words}" 
                              SelectedItem="{Binding SelectedWord}"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding WordId}" Width="Auto"/>
                            <DataGridTextColumn Header="Word Text" Binding="{Binding Text}" Width="*"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                            <DataGridTextColumn Header="Difficulty" Binding="{Binding Difficulty}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                        <TextBlock Text="Manage Word" FontSize="20" FontWeight="Bold"/>

                        <TextBlock Text="Word:" Margin="0,10,0,5"/>
                        <TextBox Text="{Binding NewWordText, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>

                        <TextBlock Text="Category:" Margin="0,10,0,5"/>
                        <TextBox Text="{Binding NewWordCategory, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>

                        <TextBlock Text="Difficulty:" Margin="0,10,0,5"/>
                        <ComboBox ItemsSource="{Binding AvailableDifficulties}" 
                                  SelectedItem="{Binding NewWordDifficulty}" 
                                  Padding="5"/>

                        <Button Content="Add New Word" Command="{Binding AddWordCommand}" Margin="0,20,0,5" Padding="10"/>
                        <Button Content="Update Selected Word" Command="{Binding UpdateWordCommand}" Margin="0,5" Padding="10"/>
                        <Button Content="Delete Selected Word" Command="{Binding DeleteWordCommand}" Margin="0,5" Background="IndianRed" Foreground="White" Padding="10"/>
                        <Button Content="Logout" Click="Logout_click" Margin="0,5" Padding="10"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Manage Players" Name="PlayersTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid Grid.Column="0" 
                              ItemsSource="{Binding Players}" 
                              SelectedItem="{Binding SelectedPlayer}"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding PlayerId}" Width="Auto"/>
                            <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                            <DataGridTextColumn Header="Default Difficulty" Binding="{Binding DefaultDifficulty}" Width="*"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                        <TextBlock Text="Manage Player" FontSize="20" FontWeight="Bold"/>

                        <TextBlock Text="Username:" Margin="0,10,0,5"/>
                        <TextBox Text="{Binding NewUsername, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>

                        <TextBlock Text="Default Difficulty:" Margin="0,10,0,5"/>
                        <ComboBox ItemsSource="{Binding AvailableDifficulties}" 
                                  SelectedItem="{Binding NewDefaultDifficulty}" 
                                  Padding="5"/>

                        <TextBlock Text="Role (0 for User, 1 for Admin):" Margin="0,10,0,5"/>
                        <ComboBox ItemsSource="{Binding AvailableRoles}" 
                                  SelectedItem="{Binding NewRole}" 
                                  Padding="5"/>

                        <Button Content="Update Selected Player" Command="{Binding UpdatePlayerCommand}" Margin="0,20,0,5" Padding="10"/>
                        <Button Content="Delete Selected Player" Command="{Binding DeletePlayerCommand}" Margin="0,5" Background="IndianRed" Foreground="White" Padding="10"/>
                        <Button Content="Logout" Click="Logout_click" Margin="0,5" Padding="10"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>