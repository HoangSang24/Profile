<Window x:Class="g1_hangmanhero.Views.HistoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:g1_hangmanhero.Views"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Game History" Height="600" Width="900">

    <Grid Background="#F4F4F4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel (Game History Details) -->
        <Grid Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>
            
            <!-- Game History Title -->
            <TextBlock Grid.Row="0" Text="Game History" FontSize="32" FontWeight="Bold" Margin="5" Foreground="#28A745" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <!-- DataGrid showing Game History -->
            <DataGrid Grid.Row="1" IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding GameHistories}" 
                      SelectedItem="{Binding SelectedFB, Mode=TwoWay}" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Game ID" Binding="{Binding GameId}" Width="*" />
                    <DataGridTextColumn Header="Username" Binding="{Binding Player.Username}" Width="*" />
                    <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="*" />
                    <DataGridTextColumn Header="Mistakes" Binding="{Binding Mistakes}" Width="*" />
                    <DataGridTextColumn Header="Time Taken" Binding="{Binding TimeTaken}" Width="*" />
                    <DataGridTextColumn Header="Played At" Binding="{Binding PlayedAt}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Total Games Played Text -->
                <TextBlock Text="Total Games Played:" FontSize="14" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TotalGames}" FontSize="16" FontWeight="Bold" Margin="10" Foreground="Black" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>

            <Button Content="Back"
                    Width="50"
                    Height="30"
                    FontWeight="Bold"
                    Command="{Binding BackCommand}"
                    Background="Gray"
                    Foreground="White"
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Grid.Row="3"/>
        </Grid>

        <!-- Right Panel (Game History Form) -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Selected Game Details Title -->
            <TextBlock Grid.Row="0" Text="Selected Game" FontSize="24" FontWeight="Bold" Margin="10" Foreground="#28A745"/>

            <!-- Game History Form (Not Editable) -->
            <StackPanel Grid.Row="1" Margin="10">
                <TextBlock Text="Game ID" FontSize="16" Margin="5"/>
                <TextBlock Text="{Binding SelectedFB.GameId}" FontSize="18" Margin="5" Foreground="Black"/>

                <TextBlock Text="Score" FontSize="16" Margin="5"/>
                <TextBlock Text="{Binding SelectedFB.Score}" FontSize="18" Margin="5" Foreground="Black"/>

                <TextBlock Text="Mistakes" FontSize="16" Margin="5"/>
                <TextBlock Text="{Binding SelectedFB.Mistakes}" FontSize="18" Margin="5" Foreground="Black"/>

                <TextBlock Text="Time Taken" FontSize="16" Margin="5"/>
                <TextBlock Text="{Binding SelectedFB.TimeTaken}" FontSize="18" Margin="5" Foreground="Black"/>

                <TextBlock Text="Played At" FontSize="16" Margin="5"/>
                <TextBlock Text="{Binding SelectedFB.PlayedAt}" FontSize="18" Margin="5" Foreground="Black"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
