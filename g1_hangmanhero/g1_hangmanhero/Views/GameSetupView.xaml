<Window x:Class="g1_hangmanhero.Views.GameSetupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:g1_hangmanhero.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="GameSetupView" Height="380" Width="420">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Game Settings" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Difficulty Block -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Word Difficulty:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding AvailableDifficulties}" 
                      SelectedItem="{Binding SelectedDifficulty}" 
                      FontSize="14" Padding="5" Width="150"/>
                    </StackPanel>

                    <!-- Spacer -->
                    <StackPanel Grid.Column="1"/>

                    <!-- Category Block -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Word Category:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding AvailableCategories}" 
                      SelectedItem="{Binding SelectedCategory}" 
                      FontSize="14" Padding="5" Width="150"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <TextBlock Text="Game Difficulty:" FontWeight="SemiBold" Margin="0,20,0,5"/>
            <ComboBox ItemsSource="{Binding AvailableGameDifficulties}" 
                      SelectedItem="{Binding SelectedGameDifficulty}" 
                      FontSize="14" Padding="5"/>

            <Button Content="Start Game" 
                    Command="{Binding StartGameCommand}"
                    FontSize="16" FontWeight="Bold" Margin="0,30,0,0" Padding="12"/>

            <Button Content="Back"
                    Width="50"
                    Height="30"
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Background="Gray"
                    Foreground="White" Click="Logout_click"
                    />
        </StackPanel>
    </Grid>
</Window>
